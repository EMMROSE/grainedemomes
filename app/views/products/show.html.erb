<div class= "container">
  <div class= "product">
    <div class= "product-illustration">
      <%= cl_image_tag @product.cover.key %>
      <%= cl_image_tag @product.photo.key %>
    </div>
    <div class= "product-description">
      <div class= "description">
        <h1><strong><%= @product.name %></strong></h1>
        <h5><%= @product.description %></h5>
        <h5>Taille: <%= @product.size.name %> mois</h5>
        <h5>Prix neuf: <%= @product.old_price%> €</h5>
        <h4>Prix Graine de Mômes: <%= @product.price%>€</h4>
      </div>
      <div class= "price">
        <% if @product.stock > 0 %>
          <%= link_to "Achetez", line_items_path(product_id: @product.id), method: :post, class: "btn-oval", id: "btn-product" %>
        <% end %>
        <div class= "link">
          <%= link_to root_path do %>
            Retour à la Boutique
          <% end %>
        </div>
      </div>
      <div>
        <% if user_signed_in? %>
          <br>
          <ul>
            <%= link_to edit_product_path(@product), class: "py-2 px-4 ml-2 bd-highlight bg-light rounded" do %>
              <i class="fas fa-pencil-alt"></i> Edit
            <% end %>
            <%= link_to product_path(@product), method: :delete, class: "py-2 px-4 ml-2 bd-highlight bg-light rounded",data: { confirm: "Etes vous sûre ?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
