<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order_gift.id %> <small><span class="badge badge-primary"><%= @order_gift.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order_gift.created_at.to_date %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order_gift.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
