<div class="navbar-lewagon fixed-top">
  <div class="nav-items">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <%= link_to "Boutique", root_path %>
  <%= link_to "Offrir", new_order_gift_path %>
  <%= link_to "Louer", root_path %>
  <%= link_to "Guide des tailles", root_path %>
  </div>


  <div class="cart">
    <%= link_to cart_path(@current_cart) do %>
      <i class="fab fa-opencart"></i>
      <% cart = @current_cart %>
      <% items = 0 %>
      <% cart.line_items.each do |i| %>
        <% items += 1 %>
      <% end %>
      <% if items > 0 %>
        <p><%= items %></p>
      <% end %>
    <% end %>
  </div>
</div>
<% if params[:controller] == "pages"%>
  <%= render 'shared/search_filters' %>
<% end %>
